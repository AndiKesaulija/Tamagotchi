<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Tamagotchi.Views.App">
    <Application.Resources>
        <ResourceDictionary>
            <Color x:Key="Bar_Color">#264653</Color>
            <Color x:Key="Background_Color">#2a9d8f</Color>
            <Color x:Key="Font_Color">#e9c46a</Color>

            <Style TargetType="NavigationPage">
                <Setter Property="BarBackgroundColor" Value="#2a9d8f"></Setter>
            </Style>

            <Style TargetType="Label">
                <Setter Property="TextColor" Value="#e9c46a"></Setter>
            </Style>

            <Style TargetType="Button">
                <Setter Property="TextColor" Value="#e9c46a"></Setter>
                <Setter Property="BorderColor" Value="#2a9d8f"></Setter>
                <!--<Style.Triggers>
                    <Trigger TargetType="Button" Property="IsPressed" Value="True">
                        <Setter Property="TextColor" Value="red"></Setter>
                    </Trigger>
                </Style.Triggers>-->
            </Style>


        </ResourceDictionary>
    </Application.Resources>
</Application>